---
layout: blog
---

<!DOCTYPE html>
<html lang="en-us">
  {% include head.html %}
  <body>
    <!-- Uses a header that contracts as the page scrolls down. -->
    <div class="mdl-layout mdl-js-layout">
      {% include page-header.html %}
      <div class="mdl-layout__content">
        <main class="<%= className('blog', 'main') %>">
          {% for post in site.posts %}
            <div class="<%= className('blog', 'post') %>">
              <div class="<%= className('blog', 'metadata') %>">
                <span class="<%= className('blog', 'date') %>">{{ post.date | date: "%B %e <br /> %Y" }}</span>
              </div>
              <div class="<%= className('blog', 'detail') %>">
                <h3 class="<%= className('blog', 'title') %>">
                  <a href="{{ post.url }}">{{ post.title }}</a>
                </h3>
                {% if post.categories %}
                  <span class="<%= className('blog', 'categories') %>">categories: <span class="<%= className('blog', 'category') %>">{{ post.categories }}</span></span>
                {% endif %}
                <p class="<%= className('blog', 'excerpt') %>">{{ post.excerpt }}</p>
                {% if post.tags %}
                  <div class="<%= className('blog', 'tags') %>">
                    {% for tag in post.tags %}
                      <span>{{ tag }}</span>
                    {% endfor %}
                  </div>
                {% endif %}
                <div class="<%= className('blog', 'post-footer') %>">
                  <a class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" href="{{ post.url }}">read more</a>
                </div>
              </div>

            </div>
          {% endfor %}
        </main>
        {% include footer.html %}
      </div>
    </div>
  </body>
</html>
