---
layout: post
---

<!DOCTYPE html>
<html lang="en-us">
  {% include head.html %}
  <body>
    <div class="mdl-layout mdl-js-layout">
      {% include page-header.html theme="post" %}
      <div class="mdl-layout__content">
        <div class="mdl-grid <%= className('post', 'inner-wrapper') %>">
          <main class="mdl-grid <%= className('post', 'main') %>">
            <div class="mdl-cell mdl-cell--12-col">
                <h1 class="<%= className('post', 'title') %>">{{ page.title}}</h1>
                {% if page.categories %}
                  <span class="<%= className('post', 'categories') %>">categories: <span class="<%= className('post', 'category') %>">{{ page.categories }}</span></span>
                {% endif %}
                <div class="<%= className('post', 'content') %>">
                  {{ content }}
                </div>
                {% if page.tags %}
                  <div class="<%= className('post', 'tags') %>"> Tags:
                    {% for tag in page.tags %}
                      <span>{{ tag }}</span>
                    {% endfor %}
                  </div>
                {% endif %}
                <a class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent <%= className('post', 'back') %>" href="/blog">back</a>
            </div>
          </main>
        </div>
        {% include footer.html %}
      </div>
    </div>
  </body>
</html>

